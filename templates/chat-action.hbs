<div class="w4sq-chat">
  <h2>{{label}} - {{actorName}}</h2>
  <p>{{localize "W4SQ.ChatTN"}}: {{tn}} | {{localize "W4SQ.ChatRoll"}}: {{roll}}</p>
  <p>{{#if success}}{{localize "W4SQ.ChatSuccess"}} ({{margin}}){{else}}{{localize "W4SQ.ChatFailure"}} ({{margin}}){{/if}}</p>
  <p>{{localize "W4SQ.ChatDamage"}}: {{dmg}}</p>
  {{#if moraleLoss}}<p>{{localize "W4SQ.ChatMorale"}}: {{moraleLoss}}</p>{{/if}}
  <p>{{soakDetail}}</p>
  <footer>{{footer}}</footer>
</div>
